#!/usr/bin/env python3
from p2p.train import run


@click.group()
def p2p():
    pass

@p2p.command()
@click.option('--fasta-file',
              help='Input microbial abundances')
@click.option('--links-file',
              help='Input microbial abundances')
@click.option('--checkpoint-path',
              help='Input microbial abundances')
@click.option('--data-dir',
              help='Input microbial abundances')
@click.option('--model-path',
              help='Input microbial abundances')
@click.option('--logging-path',
              help='Input microbial abundances', default=None)
@click.option('--num-neg',
              help='Input microbial abundances', default=10)
@click.option('--batch-size',
              help='Input microbial abundances', default=10)
@click.option('--num-workers',
              help='Input microbial abundances', default=10)
@click.option('--arm-the-gpu',
              help='Input microbial abundances', default=False)
def finetune(fasta_file, links_file,
             checkpoint_path, data_dir, model_path, logging_path,
             num_neg=10, batch_size=10, num_workers=10, arm_the_gpu=True):

    run(fasta_file, links_file,
        checkpoint_path, data_dir, model_path, logging_path,
        num_neg=10, batch_size=10, num_workers=10, arm_the_gpu=True)


if __name__ == "__main__":
    finetune()
